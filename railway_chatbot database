-- -----------------------------------------------------
-- Table `booking_history`
-- Links users to their booked PNRs
-- -----------------------------------------------------
CREATE TABLE IF NOT EXISTS booking_history (
    booking_id INT AUTO_INCREMENT PRIMARY KEY,
    user_id INT,
    pnr_number BIGINT,
    booking_date DATE,
    FOREIGN KEY (user_id) REFERENCES user_details(user_id)
      ON DELETE SET NULL ON UPDATE CASCADE, -- Keep history even if user deleted? Or CASCADE?
    FOREIGN KEY (pnr_number) REFERENCES pnr_status(pnr_number)
      ON DELETE CASCADE ON UPDATE CASCADE -- If PNR deleted, remove booking history entry
) COMMENT = 'Links users to their booked PNRs';

