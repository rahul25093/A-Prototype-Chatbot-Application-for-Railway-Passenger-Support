-- -----------------------------------------------------
-- Table `train_fare`
-- Stores fare information for different classes on trains
-- -----------------------------------------------------
CREATE TABLE IF NOT EXISTS train_fare (
    fare_id INT AUTO_INCREMENT PRIMARY KEY,
    train_number INT,
    from_location VARCHAR(100),
    to_location VARCHAR(100),
    class VARCHAR(20) NOT NULL,
    fare DECIMAL(10, 2) NOT NULL,
    FOREIGN KEY (train_number) REFERENCES train_details(train_number)
      ON DELETE CASCADE ON UPDATE CASCADE,
    UNIQUE KEY unique_fare (train_number, from_location, to_location, class)
) COMMENT = 'Stores fare information for different classes on trains';

