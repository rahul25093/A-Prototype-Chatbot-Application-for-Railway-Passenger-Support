-- -----------------------------------------------------
-- Table `stations` (CORRECTED NAME)
-- Stores information about railway stations
-- -----------------------------------------------------
CREATE TABLE IF NOT EXISTS stations (
    station_code VARCHAR(10) NOT NULL,
    station_name VARCHAR(100) NOT NULL,
    details TEXT,                         -- Added details column
    state VARCHAR(50),
    location VARCHAR(100),
    PRIMARY KEY (station_code),
    INDEX idx_station_name (station_name) -- Index for faster name lookup
) COMMENT = 'Stores information about railway stations';

