-- Create the database if it doesn't already exist
CREATE DATABASE IF NOT EXISTS railway_chatbot;

-- Switch to the newly created database
USE railway_chatbot;

-- -----------------------------------------------------
-- Table `train_details`
-- Stores details about individual trains
-- -----------------------------------------------------
CREATE TABLE IF NOT EXISTS train_details (
    train_number INT PRIMARY KEY,           -- Unique train identifier
    from_location VARCHAR(100),             -- Origin station name/code
    to_location VARCHAR(100),               -- Destination station name/code
    timings TIME,                           -- Scheduled departure/arrival time
    status VARCHAR(20)                      -- e.g., On Time, Delayed, Cancelled
) COMMENT = 'Stores details about individual trains';

