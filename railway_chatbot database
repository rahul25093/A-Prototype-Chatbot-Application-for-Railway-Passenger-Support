-- -----------------------------------------------------
-- Table `pnr_status`
-- Stores PNR status information, linked to a train
-- -----------------------------------------------------
CREATE TABLE IF NOT EXISTS pnr_status (
    pnr_number BIGINT PRIMARY KEY,
    train_number INT,
    seat_number VARCHAR(10),
    journey_date DATE,
    status VARCHAR(20),
    FOREIGN KEY (train_number) REFERENCES train_details(train_number)
      ON DELETE SET NULL ON UPDATE CASCADE -- If train is deleted, keep PNR but unlink train_number (or restrict)
) COMMENT = 'Stores PNR status information, linked to a train';

