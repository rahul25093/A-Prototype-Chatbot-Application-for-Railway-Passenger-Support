('MDU', 'Madurai Junction', 'Major railway station in Madurai.', 'Tamil Nadu', 'Madurai, Tamil Nadu'),
('TPJ', 'Tiruchchirappalli Junction', 'Major railway junction in Tamil Nadu.', 'Tamil Nadu', 'Tiruchirappalli, Tamil Nadu'),
('JAT', 'Jammu Tawi', 'Main railway station serving Jammu.', 'Jammu and Kashmir', 'Jammu, Jammu and Kashmir'),
('ASR', 'Amritsar Junction', 'Main railway station in Amritsar.', 'Punjab', 'Amritsar, Punjab'),
('LDH', 'Ludhiana Junction', 'Major railway station in Punjab.', 'Punjab', 'Ludhiana, Punjab'),
('UMB', 'Ambala Cantt Junction', 'Major railway junction in Haryana.', 'Haryana', 'Ambala, Haryana'),
('CDG', 'Chandigarh Junction', 'Main railway station serving Chandigarh.', 'Chandigarh', 'Chandigarh, Chandigarh');

-- --- End of Script ---

SELECT
    train_number,
    timings,                             -- Original value from the column
    CAST(timings AS CHAR) AS timings_as_char, -- See it as a character string
    TIME_FORMAT(timings, '%H:%i') AS formatted_time_by_mysql,
    status
FROM
    train_details
WHERE
    train_number = 10805;
    
    SELECT
    ps.pnr_number,
    ps.journey_date AS raw_journey_date,    -- Raw value from pnr_status
    td.timings AS raw_train_timings,        -- Raw value from train_details
    DATE_FORMAT(ps.journey_date, '%d-%b-%Y') AS formatted_journey_date,
    TIME_FORMAT(td.timings, '%H:%i') AS formatted_departure_time,
    ps.seat_number,
    ps.status AS pnr_ticket_status,
    td.train_number,
    td.from_location,
    td.to_location,
    td.status AS train_operational_status
FROM
    pnr_status ps
JOIN
    train_details td ON ps.train_number = td.train_number
WHERE
    ps.pnr_number = 6234567890;
